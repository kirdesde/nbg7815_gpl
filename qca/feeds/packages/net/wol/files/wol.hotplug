#!/bin/sh

##check mode,if AP/UR,exit	
sys_mode=$(get_sys_mode)
[ "$sys_mode" == "2" -o "$sys_mode" == "3" ] && exit 0

. /etc/functions.sh
include /lib/config

if [ "$ACTION" = "ifup" -a "$INTERFACE" = "wan" ]; then
	/etc/init.d/wol restart
fi

if [ "$ACTION" = "ifup" -a "$INTERFACE" = "lan" ]; then
	/etc/init.d/wol restart
fi
